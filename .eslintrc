{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "camelcase": 0,
    "func-names": 0,
    "no-plusplus": 0,
    "no-undef": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 0,
    "import/imports-first": ["error", "absolute-first"],
    "import/newline-after-import": "error",

    /* "expression" or "declaration"
    Choose your own or delete to disable */
    "func-style": ["error", "expression"]

    // Prettier does this
    //"indent": ["error", 2],
    //"quotes": ["error", "single"]
  },
  "globals": {
    "window": true,
    "document": true,
    "localStorage": true,
    "FormData": true,
    "FileReader": true,
    "Blob": true,
    "navigator": true,
    "$": true
  },
  "parser": "babel-eslint"
}
