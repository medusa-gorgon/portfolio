include ../modules/section-head
include ../modules/all-button

section.section
  .portfolio
    .container
      .section__wrapper.portfolio__wrapper
        +section-head('Portfolio', 'Simplicity is the ultimate sophistication')
        .portfolio__filter
          .portfolio__filter-title Filter by
          ul.portfolio__filter-list
            each item in filter
              li.portfolio__filter-item
                button(type='button').portfolio__filter-tag= item.text
        include ../elements/gallery
        +all-button('Browse all')
